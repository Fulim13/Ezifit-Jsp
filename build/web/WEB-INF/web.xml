<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetProduct</servlet-name>
        <servlet-class>controller.GetProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProduct</servlet-name>
        <servlet-class>controller.SearchProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductDetails</servlet-name>
        <servlet-class>controller.GetProductDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>controller.AddToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetReview</servlet-name>
        <servlet-class>controller.GetReview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveOrderReview</servlet-name>
        <servlet-class>controller.SaveOrderReview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveProdReview</servlet-name>
        <servlet-class>controller.SaveProdReview</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetProduct</servlet-name>
        <url-pattern>/GetProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProduct</servlet-name>
        <url-pattern>/SearchProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductDetails</servlet-name>
        <url-pattern>/GetProductDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/AddToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetReview</servlet-name>
        <url-pattern>/GetReview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveProdReview</servlet-name>
        <url-pattern>/SaveProdReview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveOrderReview</servlet-name>
        <url-pattern>/SaveOrderReview</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>homePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
